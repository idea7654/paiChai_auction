<%- layout('layout') %>

<div style="position:absolute; left:35%; top: 30%;" class="row">
  <img style="height:400px;" src="/images/<%= result.image %>">
</div>

<div style="position:absolute; left:35%; top: 85%;" class="info">
  <h3><%= result.title %></h3>
  <br>
</div>

<div style="position:absolute; left:75%; top:30%;" class="bid">
  <h2 id="time"></h2>
  <br>
  <h3>최고입찰자: <%- result.nowowner %></h3>
  <br>
  <h3>최종가격</h3>
  <h2><%- result.finalprice %>원</h2>
</div>

<div style="position:absolute; left:75%; top: 60%;" class="sellerInfo">
  <h3>출품자</h3>
  <h2><%- result.owner %></h2>
</div>

<div id="line" style="position: absolute; top: 50%;">

</div>

<div id="pay" style="position: absolute; height: 30px; left: 55%; top: 90%;">
  <!-- <button type="button" onclick="window.location.href='/payments/<%- result.id %>'">결제하기</button> -->
</div>
<script>
  var flag = <%= flag %>;
  var pay = <%= result.pay %>;

  if(flag === true){
    var btn = document.createElement('button');
    btn.addEventListener('click', () => {
      window.location.href='/payments/<%- result.id %>';
    });
    btn.innerHTML = '결제하기';
    document.getElementById('pay').appendChild(btn);
  }

  if(pay){
    document.body.style.opacity = 0.5;
    alert('결제가 완료된 상품입니다!');
    window.location.href = '/';
  }
</script>
